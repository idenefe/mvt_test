
<!--This form_for has a url explicitly stated because there will be no login model-->
<div class="container-fluid" id="main-bg">
  <div class="row center-vertical">
    <div class="jumbotron center col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 bg-2">
      <h1 align="center">Log in</h1>
      <%= form_for(:session, :html => {class:"form-horizontal", role: "form"}, url: login_path) do |f|%>
        <div class="form-group">
          <div class="control-label col-xs-2">
            <%= f.label :username %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-xs-2">
            <%=f.label :password %>
          </div>
          <div class="col-xs-10">
            <%=f.password_field :password, class: "form-control", autocomplete: "off"%>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-12">
            <%=f.submit "Log in", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <%end%>
    </div>  
  </div>
</div>
